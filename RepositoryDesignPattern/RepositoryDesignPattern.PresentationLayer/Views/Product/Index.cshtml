@model List<RepositoryDesignPattern.EntityLayer.Concrete.Product>
@{
	Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<title>Ürün Sayfası</title>
<div class="container">
	<br />
	<table class="table table-bordered">
		<tr>
			<th>#</th>
			<th>Ürün Adı</th>
			<th>Stok</th>
			<th>Fiyat</th>
			<th>Kategori</th>
			<th>Sil</th>
			<th>Güncelle</th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>@item.ProductId</td>
				<td>@item.ProductName</td>
				<td>@item.ProductStock</td>
				<td>@item.ProductPrice</td>
				<td>@item.CategoryId</td>
				<td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger">Sil</a></td>
				<td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-warning">Güncelle</a></td>
			</tr>
		}
	</table>
	<a href="/Product/AddProduct" class="btn btn-outline-success">Yeni Ürün</a>
</div>
